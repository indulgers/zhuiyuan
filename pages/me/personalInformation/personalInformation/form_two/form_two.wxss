/* pages/me/personalInformation/form_two/form_two.wxss */
.big_title{
    display: flex;
    width: 100%;
    flex-direction: column;
    text-align: center;
    color: #4658A9;
    font-size: 24px;
}
.container{
    position: absolute;
    padding-top: 24px;
    width:100%;
    height: 100%;
    padding-bottom: 30px;
    background-color:#FFF;
  }
  .nav_left{
    width:45%;
    height:100%;
    background:#F2F2F2;
    text-align:center;
    position:absolute;
    top:0;
    left:0;
  }
.nav_left_items{
    height:80px;
    display: flex;
  }
  .item_picc{
      display: block;
      height: 40px;
      padding-left: 5px;
      padding-top: 20px;
  }
  .item-box{
    width: 100%;
    padding-left: 5px;
  }
  .item-box-title{
    padding-top: 12px;
    font-size: 20px;
    text-align: left;
  }
  .item-box-desc{
    font-size: 13px;
    color: gray;
    text-align: left;
  }

  
  .nav_left .nav_left_items.active{
    position:relative;
    background:#FFF;
    
  }
  .nav_left .nav_left_items.active::before{
    display: inline-block;
    width:6rpx;
    height:60rpx;
    content:'';
    position:absolute;
    top:20rpx;
    left:0;
  }
  .nav_right{
    position:absolute;
    top:0;
    right:0;
    width:55%;
    height:100%;
  }
   
  .nav_right .nav_right_items{
    padding-top: 10px;
    display: flex;
    font-size: 20px;
    padding-left: 15px;
  } 

  .nocate{
    padding:100rpx;
    text-align: center;  
  } 
   
  .nocate image{
    width:70rpx;
    height:70rpx;
  }
  .nocate text{
    font-size:28rpx;
    display:block;
    color:#BBB;
  }
  /*隐藏滚动条*/
  ::-webkit-scrollbar{
    width: 0;
    height: 0;
    color: transparent;
  }
  .sub{
    background-color: white;
    width: 100%;

}
.sub_btn{
    background-color: #536BD9;
    color: white;
}
.no{
    background-color: rgba(242, 114, 114, 100);
    color: white;
}