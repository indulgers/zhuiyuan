/* 搜索栏 */
.header{
  display: flex;
  height: 100rpx;
  line-height: 60rpx;
  padding: 15rpx;
}
.searchInput{
position: relative;
text-align: left;
flex: 1;
background: rgba(173, 173, 173, 0.3);
border-radius: 40rpx;
}
.box{
  position: relative;
  background: rgba(180, 200, 250);
height: 80rpx;
width: 100rpx;
border-radius: 20rpx;
}
.searchIcon{
  position: absolute;
  padding-top: 10rpx;
  width: 90rpx;
  height: 60rpx;
}
.searchInput input{
  margin-left: 50rpx;
  height: 60rpx;
}
.placeholder{
  position: relative;
  padding-top: 20rpx;
  padding-left: 20rpx;
color: rgb(153, 153, 153);
  font-size: 40rpx;
}

