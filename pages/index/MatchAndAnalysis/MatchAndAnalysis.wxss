  .select {
    padding-left: 20px;
    margin-left: 20px;
    position: relative;
    width: 80%;
    height: 54rpx;
    line-height: 54rpx;
    border: none;
  }
  
  .active {
    padding: 0 20rpx;
    color: rgb(185, 185, 185);
    font-size: 32rpx;
  }
  
  .options{
    position: absolute;
    top: 56rpx;
    left: 0;
    width: 100%;
    border: none;
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, .15);
    background-color: #fff;
    font-size: 28rpx;
    overflow: hidden;
    z-index: 10;
  }
  
  .option {
    display: flex;
    align-items: center;
    height: 88rpx;
    padding: 0 20rpx;
    border-bottom: 1rpx solid #f2f2f2;
    transition: background-color .2s ease-in-out;
  }
  
  .option:hover {
    background-color: #d3d3d396;
  }
  
  .checkbox-icon {
    display: inline-block;
    width: 36rpx;
    color: #000;
    height: 36rpx;
    margin-right: 12rpx;
    border: 1rpx solid #999;
    border-radius: 2rpx;
  }
  
  .checked {
    background-color: #23ca8f;
    border-color: #23ca8f;
  }
  
  .label {
    flex: 1;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    color: rgb(58, 58, 58);
  }
  .line{
    border-bottom: 1px solid rgb(223, 223, 223);
    width: 85%;
  }
  page{
    width: 100%;
    padding-bottom: 0px;
  }
