
.title{
  height: 60px;
  padding-top: 15px;
  margin-bottom: 15px;
  font-size: 29px;
  color: #fff;
  font-family: cursive;
  text-align: center;
  background-color: #5CB888;
}
.input{
  display: flex;
  flex-direction: row;
  margin: 15px;
}
.bin {
  width: 28px;
  height: 25px;
  /*margin-left: 130px;*/
  margin-left:35px ;
  align-self: flex-end;
}
.compitem{
  margin: 10px 5px;
}
page {
  background: linear-gradient(180deg, #5CB888 0%, #fff 100%);
  background-attachment: fixed;
  background-size: cover;
  background-position: center top;
  height: 100%;
}
 
.snow {
  width: fit-content;
  position: absolute;
  top: -100rpx;
  width: 30rpx;
  height: 27rpx;
  z-index: 11;
}
 
.snow:nth-child(2n+2) {
  width: 35rpx;
  height: 33rpx;
}

.q_button{
  width: 37%;
  height: 46px;
  margin: 30px auto;
  background-color: #fff;
  font-size: 20px;
  text-align: center;
  color: #5CB888;
  border-radius: 30px;
}