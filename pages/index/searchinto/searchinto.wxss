.productNav{
  display: flex;
  flex-direction: row;
  font-family: "Microsoft YaHei";
  margin: 10px;
}
.left{
  width: 25%;
  font-size: 26rpx;
  background-color: #f4f4f4;
  height: fit-content;
}
.left view{
  text-align: center;
  height: 50rpx;
  line-height: 50rpx;
}
.selected{
  background-color: #fff;
  border-left: 2px solid #E54847;
  font-weight: bold;
  color: #E54847;
}
.normal{
  background-color: #f4f4f4;
  border-bottom: 1px solid #f2f2f2;
}
.right{
  width:75%;
  margin-left:5px ;
  height: 60px;
}

.header{
  display: flex;
  height: 60rpx;
  line-height: 60rpx;
  padding: 10rpx;
}
.searchInput{
margin: 10px 15px;
display: flex;
flex-direction: row;
text-align: center;
flex: 1;
background: #f8f8f9;
border-radius: 25rpx;
border: 2rpx solid #1c2438;

}

.searchIcon{
  width: 18px;
  height: 20px;
  padding-top: 10rpx;
 
}
.radioIcon{
  
  padding-top: 10px;
  padding-left: 150px;

}
.searchInput input{
 
  height: 60rpx;
}
.placeholder{
  color: rgb(155, 155, 155);
  font-size: 28rpx;
}
.cancel{
  font-size: 30rpx;
}
/* 历史记录 */
.history{
  display: flex;
  flex-flow: wrap;
}
.title{
  width: 70rpx;
  font-size: 30rpx;
  margin: 20rpx 20rpx;
}
.historyItem{
  background-color: #eee;
  font-size: 26rpx;padding: 0 30rpx;
  border-radius: 40rpx;
  margin: 23rpx 10rpx;
}
.radioButton{
  bottom: 20px;
  background-color: aqua;
}
.imageIcon{
  
  width: 70rpx;
  height: 70rpx;
 
}

/* 动态热搜 */

.hotTitle {
  font-size: 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1px solid #eee;
}
.hotList{
  display: flex;
  flex-wrap: wrap;
}
.hotItem{
  display: flex;
  flex-direction: row;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 26rpx;
  padding-right: 5px;
  border-right:1.5px solid #dddee0;
}
.order{
 padding-left: 5px;
  font-size: 24rpx;
}
.hotword{
  padding-left: 30rpx;
}